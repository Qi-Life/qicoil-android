<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:layoutDirection="ltr"
    tools:context=".lemeor.ui.main.NavigationActivity">

    <FrameLayout
        android:id="@+id/bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app2"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:blurOverlayColor="#26000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tab_vertical"
        app:layout_constraintStart_toStartOf="@id/tab_vertical"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/desktop_24"
        android:layout_marginTop="@dimen/desktop_24"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView"
        app:layout_constraintWidth_percent="0.19">

        <LinearLayout
            android:id="@+id/nav_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/desktop_16"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/desktop_16"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/desktop_16"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/hi_name"
                    style="@style/AppTheme.Text.sf_32_semibold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hi, Kevin" />

                <ImageView
                    android:id="@+id/btnToggleMenu"
                    android:layout_width="@dimen/bottom_bar_icon_size"
                    android:layout_height="@dimen/bottom_bar_icon_size"
                    android:layout_gravity="center"
                    android:contentDescription="@string/navigation_lbl_home"
                    android:src="@drawable/ic_left_panel_open"
                    app:tint="@color/white" />

            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/navigation_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_6dp"
                android:backgroundTint="@color/color_tranparent_grey_selected"
                android:gravity="center_vertical|start"
                android:minWidth="@dimen/desktop_60"
                android:minHeight="@dimen/desktop_60"
                android:padding="@dimen/desktop_16">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bottom_bar_icon_size"
                        android:layout_height="@dimen/bottom_bar_icon_size"
                        android:layout_gravity="center"
                        android:contentDescription="@string/navigation_lbl_home"
                        android:padding="@dimen/bottom_bar_icon_padding"
                        android:src="@drawable/ic_home"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvHome"
                        style="@style/text_tab_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/navigation_lbl_home"
                        android:visibility="visible" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/navigation_albums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_6dp"
                android:backgroundTint="@color/color_tranparent_grey_selected"
                android:gravity="center_vertical"
                android:minWidth="@dimen/desktop_60"
                android:minHeight="@dimen/desktop_60"
                android:padding="@dimen/desktop_16">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bottom_bar_icon_size"
                        android:layout_height="@dimen/bottom_bar_icon_size"
                        android:layout_gravity="center"
                        android:contentDescription="@string/navigation_lbl_quantum"
                        android:padding="@dimen/bottom_bar_icon_padding"
                        android:src="@drawable/ic_navigation_quantum"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvQuantum"
                        style="@style/text_tab_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/navigation_lbl_quantum"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/navigation_rife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_6dp"
                android:backgroundTint="@color/color_tranparent_grey_selected"
                android:gravity="center_vertical"
                android:minWidth="@dimen/desktop_60"
                android:minHeight="@dimen/desktop_60"
                android:padding="@dimen/desktop_16">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bottom_bar_icon_size"
                        android:layout_height="@dimen/bottom_bar_icon_size"
                        android:layout_gravity="center"
                        android:contentDescription="@string/navigation_lbl_rife"
                        android:src="@drawable/ic_rife"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvRife"
                        style="@style/text_tab_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:singleLine="true"
                        android:text="@string/navigation_lbl_rife"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/navigation_silent_quantum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_6dp"
                android:backgroundTint="@color/color_tranparent_grey_selected"
                android:gravity="center_vertical"
                android:minWidth="@dimen/desktop_60"
                android:minHeight="@dimen/desktop_60"
                android:padding="@dimen/desktop_16">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bottom_bar_icon_size"
                        android:layout_height="@dimen/bottom_bar_icon_size"
                        android:layout_gravity="center"
                        android:contentDescription="@string/navigation_lbl_quantum"
                        android:padding="@dimen/bottom_bar_icon_padding"
                        android:src="@drawable/ic_navigation_scalar"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvSilentQuantum"
                        style="@style/text_tab_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/navigation_lbl_silent_quantum"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/navigation_programs"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_6dp"
                android:backgroundTint="@color/color_tranparent_grey_selected"
                android:gravity="center_vertical"
                android:minWidth="@dimen/desktop_60"
                android:minHeight="@dimen/desktop_60"
                android:padding="@dimen/desktop_16">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bottom_bar_icon_size"
                        android:layout_height="@dimen/bottom_bar_icon_size"
                        android:layout_gravity="center"
                        android:contentDescription="@string/navigation_lbl_programs"
                        android:padding="@dimen/bottom_bar_icon_padding"
                        android:src="@drawable/ic_add_2"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvPrograms"
                        style="@style/text_tab_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="New Program"
                        android:visibility="visible" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/add_programs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_6dp"
                android:backgroundTint="@color/color_tranparent_grey_selected"
                android:gravity="center_vertical"
                android:minWidth="@dimen/desktop_60"
                android:minHeight="@dimen/desktop_60"
                android:padding="@dimen/desktop_16">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bottom_bar_icon_size"
                        android:layout_height="@dimen/bottom_bar_icon_size"
                        android:layout_gravity="center"
                        android:contentDescription="@string/navigation_lbl_programs"
                        android:padding="@dimen/bottom_bar_icon_padding"
                        android:src="@drawable/ic_add_2"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvAddProgram"
                        style="@style/text_tab_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="New Program"
                        android:visibility="visible" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvProgram"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/desktop_8"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/desktop_24"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_layout2"
            tools:itemCount="3"
            tools:listitem="@layout/item_program_tab" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#24FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tab_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurOverlayColor="#0AFFFFFF" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nav_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="24dp"
                android:background="@color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:visibility="visible"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/nav_layout"
                app:layout_constraintEnd_toStartOf="@+id/navigation_videos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nav_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_search_bar"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_search_black"
                        app:tint="@color/white" />

                    <com.Meditation.Sounds.frequencies.views.CustomFontEditText
                        android:id="@+id/album_search"
                        android:layout_width="0dp"
                        android:paddingVertical="@dimen/desktop_14"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_item_5"
                        android:layout_marginRight="@dimen/margin_item_5"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:fontFamily="@font/sf_pro_regular"
                        android:hint="@string/search_hint"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="14sp"
                        app:fontText="fonts/HelveticaNeue_Thin.otf" />

                    <ImageView
                        android:id="@+id/album_search_clear"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/desktop_32"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_cancel_new"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/navigation_videos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:paddingHorizontal="@dimen/desktop_14"
                android:paddingVertical="@dimen/desktop_12"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/bg_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/navigation_discover"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/bottom_bar_icon_size"
                    android:layout_height="@dimen/bottom_bar_icon_size"
                    android:layout_gravity="center"
                    android:contentDescription="@string/navigation_lbl_videos"
                    android:padding="@dimen/bottom_bar_icon_padding"
                    android:src="@drawable/ic_navigation_video"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:singleLine="true"
                    android:text="@string/navigation_lbl_videos"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/navigation_discover"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/desktop_14"
                android:paddingVertical="@dimen/desktop_12"
                android:background="@drawable/bg_button"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgAvatar"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/bottom_bar_icon_size"
                    android:layout_height="@dimen/bottom_bar_icon_size"
                    android:layout_gravity="center"
                    android:contentDescription="@string/navigation_lbl_shop"
                    android:padding="@dimen/bottom_bar_icon_padding"
                    android:src="@drawable/ic_explore"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:singleLine="true"
                    android:text="@string/navigation_lbl_shop"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/navigation_options"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bottom_bar_icon_size"
                        android:layout_height="@dimen/bottom_bar_icon_size"
                        android:layout_gravity="center"
                        android:contentDescription="@string/navigation_lbl_options"
                        android:padding="@dimen/bottom_bar_icon_padding"
                        android:src="@drawable/ic_navigation_option"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/navigation_lbl_options"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="visible" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="@dimen/image_size_20"
                android:layout_height="@dimen/image_size_20"
                android:layout_gravity="start"
                android:contentDescription="image_avatar"
                android:src="@drawable/ic_navigation_quantum"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/nav_host_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_layout" />

        <!-- Search list -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="500dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/nav_host_fragment"
            app:layout_constraintTop_toBottomOf="@+id/nav_layout">

            <LinearLayout
                android:id="@+id/view_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/desktop_16"
                android:layout_marginRight="@dimen/desktop_16"
                android:layout_marginBottom="@dimen/indent_8"
                android:background="@drawable/bg_search_home"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/margin_left_top_icon"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_layout">

                <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                    android:id="@+id/lblnoresult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/indent_35"
                    android:text="@string/txt_no_result"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="gone"
                    app:fontText="fonts/HelveticaNeue_Bold.otf" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/search_categories_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Flash sale -->
    <RelativeLayout
        android:id="@+id/flash_sale"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_time_flash_sale_bg"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mTvDurationCountDown"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical|center"
            android:orientation="horizontal">

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/flash_sale_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@drawable/ic_time_flash_sale_rec"
                android:padding="2dp"
                android:text="10"
                android:textColor="#000"
                android:textSize="11sp"
                app:fontText="fonts/MyriadPro_Bold.otf"
                tools:ignore="HardcodedText,SmallSp" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/flash_sale_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/ic_time_flash_sale_rec"
                android:padding="2dp"
                android:text="10"
                android:textColor="#000"
                android:textSize="11sp"
                app:fontText="fonts/MyriadPro_Bold.otf"
                tools:ignore="HardcodedText,SmallSp" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/flash_sale_seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@drawable/ic_time_flash_sale_rec"
                android:padding="2dp"
                android:text="10"
                android:textColor="#000"
                android:textSize="11sp"
                app:fontText="fonts/MyriadPro_Bold.otf"
                tools:ignore="HardcodedText,SmallSp" />
        </LinearLayout>

        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
            android:id="@+id/mTvDurationCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="1dp"
            android:background="@drawable/ic_time_flash_sale_bg_black"
            android:padding="2dp"
            android:text="@string/txt_flash_sale"
            android:textColor="#fff"
            android:textSize="12sp"
            app:fontText="fonts/MyriadPro_Bold.otf"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginBottom="7dp"
            android:layout_toStartOf="@+id/mTvDurationCountDown"
            android:layout_toLeftOf="@+id/mTvDurationCountDown"
            android:src="@drawable/ic_time_flash_sale_on"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <!-- Downloader -->
    <RelativeLayout
        android:id="@+id/viewGroupDownload"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="@dimen/desktop_16"
        android:background="@drawable/sh_download"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imvDownload"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_download"
            tools:ignore="ContentDescription" />

        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
            android:id="@+id/mTvDownloadPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imvDownload"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:textColor="#F7D04F"
            android:textSize="12sp"
            app:fontText="fonts/MyriadPro_Bold.otf"
            tools:text="0/0" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnStartChatBot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/margin_item_dialog"
        app:layout_constraintBottom_toTopOf="@+id/player_ui_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_avatar_chatbot" />

    <TextView
        android:id="@+id/viewIntroChatBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-25dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_bg_tooltip_chatbot"
        android:gravity="center"
        android:lineSpacingMultiplier=".8"
        android:text="My name is Dr. Qi\nI'm an AI assistant"
        android:textColor="#000"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnStartChatBot"
        app:layout_constraintEnd_toStartOf="@+id/btnStartChatBot" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnHideChatBot"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="-8dp"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/btnStartChatBot"
        app:layout_constraintEnd_toEndOf="@+id/btnStartChatBot"
        app:srcCompat="@drawable/ic_close" />

    <!-- Player -->
    <LinearLayout
        android:id="@+id/player_ui_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <LinearLayout
        android:id="@+id/bg_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_50"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_500"
            app:cardCornerRadius="@dimen/margin_item_5"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/txt_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/image_size_20"
                android:paddingVertical="@dimen/image_size_14"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Reqeat off" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>