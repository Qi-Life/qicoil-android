<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/track_name_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".lemeor.tools.player.PlayerUIFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/track_position"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            tools:text="00:00" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:progressTint="@android:color/white"
            android:thumbTint="@android:color/white" />

        <TextView
            android:id="@+id/track_duration"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            tools:text="00:00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingStart="@dimen/indent_8"
                android:paddingEnd="@dimen/indent_8">


                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/track_image"
                    android:layout_width="@dimen/height_repeat_button"
                    android:layout_height="@dimen/height_repeat_button"
                    android:src="@drawable/ic_album_default_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:siBorderColor="@color/track_name_background"
                    app:siBorderWidth="0dp"
                    app:siRadius="5dp" />

                <LinearLayout
                    android:id="@+id/view_album_info"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/player_previous"
                    app:layout_constraintStart_toEndOf="@+id/track_image"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                        android:id="@+id/track_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:paddingStart="@dimen/indent_8"
                        android:paddingEnd="@dimen/indent_8"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:visibility="gone"
                        font:fontText="fonts/BebasNeue_Bold.otf"
                        tools:text="Track name" />

                    <TextView
                        android:id="@+id/track_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:ellipsize="marquee"
                        android:paddingStart="@dimen/indent_8"
                        android:paddingEnd="@dimen/indent_8"
                        android:singleLine="true"
                        android:text="@string/tv_please_choose_a_frequency_to_play"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/player_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_button_player_default"
                    android:layout_marginEnd="@dimen/indent_20"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_repeat_all_disable"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/player_previous"
                    android:layout_width="@dimen/height_small_icon"
                    android:layout_height="@dimen/height_small_icon"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:rotation="180"
                    android:src="@drawable/ic_next_song_new"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/player_play"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/player_play"
                    android:layout_width="@dimen/height_top_icon"
                    android:layout_height="@dimen/height_top_icon"
                    android:layout_marginEnd="@dimen/indent_10"
                    android:src="@drawable/ic_play_song_disable"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/player_next"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/player_next"
                    android:layout_width="@dimen/height_button_player_default"
                    android:layout_height="@dimen/height_button_player_default"
                    android:layout_marginEnd="@dimen/indent_10"
                    android:src="@drawable/ic_next_song_new_disable"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/player_shuffle"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/player_shuffle"
                    android:layout_width="@dimen/height_button_player_default"
                    android:layout_height="@dimen/height_button_player_default"
                    android:layout_marginStart="@dimen/height_medium_icon"
                    android:layout_marginEnd="@dimen/indent_10"
                    android:src="@drawable/ic_shuffle_new_off_disbale"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/player_repeat"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewPlayerScalar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#1868AD">

            <ImageView
                android:id="@+id/player_play_scalar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button_player_default"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_silent_scalar_off"
                android:layout_marginHorizontal="@dimen/indent_54"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.Meditation.Sounds.frequencies.views.RippleScalarPlay
                android:id="@+id/view_scalar_status_playing"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/player_play_scalar"
                app:layout_constraintTop_toBottomOf="@+id/player_play_scalar" />

            <View
                android:id="@+id/view_scalar_status_stoping"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_player_status_dot"
                app:layout_constraintBottom_toBottomOf="@+id/view_scalar_status_playing"
                app:layout_constraintEnd_toEndOf="@+id/view_scalar_status_playing"
                app:layout_constraintStart_toStartOf="@+id/view_scalar_status_playing"
                app:layout_constraintTop_toTopOf="@+id/view_scalar_status_playing" />


            <TextView
                android:id="@+id/tv_scalar_play_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-20dp"
                android:ellipsize="marquee"
                android:layout_marginBottom="5dp"
                android:singleLine="true"
                android:paddingStart="@dimen/indent_8"
                android:text="@string/tv_there_no_silent_energies"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/view_scalar_status_playing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view_scalar_status_playing"
                app:layout_constraintTop_toTopOf="@+id/view_scalar_status_playing" />

            <LinearLayout
                android:id="@+id/view_album_scalar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-10dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/view_scalar_status_playing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view_scalar_status_playing"
                app:layout_constraintTop_toTopOf="@+id/view_scalar_status_playing">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/track_image_scalar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_album_default_small"
                    app:siBorderColor="@color/transparent"
                    app:siBorderWidth="0dp"
                    app:siRadius="5dp" />

                <TextView
                    android:id="@+id/track_name_scalar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:ellipsize="marquee"
                    android:paddingStart="@dimen/indent_8"
                    android:paddingEnd="@dimen/indent_8"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    tools:text="Track name" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_space_when_slient_quantum_gone"
            android:layout_width="0dp"
            android:layout_weight="0.23"
            android:visibility="gone"
            android:layout_height="1dp"/>

    </LinearLayout>
</LinearLayout>