<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    app:cardCornerRadius="@dimen/desktop_16"
    android:background="@drawable/bg_player_gradient"
    app:cardElevation="0dp"
    tools:context=".lemeor.tools.player.PlayerUIFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:minHeight="@dimen/desktop_144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-10dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_music_bar">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:minHeight="100dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="@dimen/desktop_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/desktop_16"
                    android:paddingVertical="@dimen/desktop_16">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewTrackImage"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginVertical="@dimen/desktop_16"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/color_gray"
                            app:cardCornerRadius="@dimen/desktop_16"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/layoutPlayerController"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.3">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_card_music_bar"
                                android:padding="@dimen/desktop_16">

                                <com.github.siyamed.shapeimageview.RoundedImageView
                                    android:id="@+id/track_image"
                                    android:layout_width="@dimen/desktop_80"
                                    android:layout_height="@dimen/desktop_80"
                                    android:src="@drawable/ic_album_default_small"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:siBorderColor="@color/track_name_background"
                                    app:siBorderWidth="0dp"
                                    app:siRadius="4dp" />

                                <LinearLayout
                                    android:id="@+id/view_album_info"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="@dimen/desktop_16"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/track_image"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                                        android:id="@+id/track_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="marquee"
                                        android:paddingStart="@dimen/indent_8"
                                        android:paddingEnd="@dimen/indent_8"
                                        style="@style/AppTheme.Text.sf_24_reg"
                                        android:singleLine="true"
                                        android:textAllCaps="true"
                                        android:textColor="@android:color/white"
                                        tools:text="Track name" />

                                    <TextView
                                        android:id="@+id/track_name"
                                        style="@style/AppTheme.Text.sf_20_reg"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                                        android:ellipsize="marquee"
                                        android:paddingStart="@dimen/indent_8"
                                        android:paddingEnd="@dimen/indent_8"
                                        android:singleLine="true"
                                        android:text="@string/tv_please_choose_a_frequency_to_play"
                                        android:textColor="#66FFFFFF" />
                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/layoutPlayerController"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/desktop_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/player_repeat"
                                android:layout_width="@dimen/height_button_player_default"
                                android:layout_height="@dimen/height_button_player_default"
                                android:layout_marginEnd="@dimen/indent_20"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_music_repeat"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:id="@+id/player_previous"
                                android:layout_width="@dimen/height_small_icon"
                                android:layout_height="@dimen/height_small_icon"
                                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                                android:rotation="180"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_music_next"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/player_play"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:id="@+id/player_play"
                                android:layout_width="@dimen/height_top_icon"
                                android:layout_height="@dimen/height_top_icon"
                                android:layout_marginEnd="@dimen/indent_10"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_music_pause"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/player_next"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:id="@+id/player_next"
                                android:layout_width="@dimen/height_button_player_default"
                                android:layout_height="@dimen/height_button_player_default"
                                android:layout_marginEnd="@dimen/indent_10"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_music_next"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/player_shuffle"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:id="@+id/player_shuffle"
                                android:layout_width="@dimen/height_button_player_default"
                                android:layout_height="@dimen/height_button_player_default"
                                android:layout_marginEnd="@dimen/indent_10"
                                android:src="@drawable/ic_music_shuffe"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/player_repeat"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/kprogresshud_grey_color"
                                tools:ignore="ContentDescription" />
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/viewPlayerScalar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#1868AD"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/layoutPlayerController"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/player_play_scalar"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/height_button_player_default"
                                android:layout_marginHorizontal="@dimen/indent_54"
                                android:adjustViewBounds="true"
                                android:src="@drawable/bg_silent_scalar_off"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.Meditation.Sounds.frequencies.views.RippleScalarPlay
                                android:id="@+id/view_scalar_status_playing"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:visibility="invisible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/player_play_scalar"
                                app:layout_constraintTop_toBottomOf="@+id/player_play_scalar" />

                            <View
                                android:id="@+id/view_scalar_status_stoping"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_marginEnd="6dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/bg_player_status_dot"
                                app:layout_constraintBottom_toBottomOf="@+id/view_scalar_status_playing"
                                app:layout_constraintEnd_toEndOf="@+id/view_scalar_status_playing"
                                app:layout_constraintStart_toStartOf="@+id/view_scalar_status_playing"
                                app:layout_constraintTop_toTopOf="@+id/view_scalar_status_playing" />

                            <TextView
                                android:id="@+id/tv_scalar_play_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-20dp"
                                android:layout_marginBottom="5dp"
                                android:ellipsize="marquee"
                                android:paddingStart="@dimen/indent_8"
                                android:singleLine="true"
                                android:text="@string/tv_there_no_silent_energies"
                                android:textColor="@android:color/white"
                                android:textSize="10sp"
                                app:layout_constraintBottom_toBottomOf="@+id/view_scalar_status_playing"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/view_scalar_status_playing"
                                app:layout_constraintTop_toTopOf="@+id/view_scalar_status_playing" />

                            <LinearLayout
                                android:id="@+id/view_album_scalar"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-10dp"
                                android:gravity="center_vertical"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="@+id/view_scalar_status_playing"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/view_scalar_status_playing"
                                app:layout_constraintTop_toTopOf="@+id/view_scalar_status_playing">

                                <com.github.siyamed.shapeimageview.RoundedImageView
                                    android:id="@+id/track_image_scalar"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_album_default_small"
                                    app:siBorderColor="@color/transparent"
                                    app:siBorderWidth="0dp"
                                    app:siRadius="5dp" />

                                <TextView
                                    android:id="@+id/track_name_scalar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                                    android:ellipsize="marquee"
                                    android:paddingStart="@dimen/indent_8"
                                    android:paddingEnd="@dimen/indent_8"
                                    android:singleLine="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="10sp"
                                    tools:text="Track name" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginVertical="@dimen/desktop_16"
                            android:visibility="visible"
                            android:layout_marginEnd="@dimen/desktop_16"
                            app:cardCornerRadius="@dimen/desktop_16"
                            app:cardBackgroundColor="@color/color_gray"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/layoutPlayerController"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:background="@drawable/bg_card_music_bar"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imageSilentQuantum"
                                    android:layout_width="@dimen/desktop_80"
                                    android:layout_height="@dimen/desktop_80"
                                    android:layout_marginEnd="@dimen/desktop_24"
                                    android:src="@drawable/ic_album_default_small"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvTitleSilent"
                                    style="@style/AppTheme.Text.sf_24_reg"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/desktop_16"
                                    android:text="Wealth"
                                    app:layout_constraintBottom_toTopOf="@+id/tvNameSilent"
                                    app:layout_constraintEnd_toStartOf="@+id/imageSilentQuantum"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_chainStyle="packed" />

                                <TextView
                                    android:id="@+id/tvNameSilent"
                                    style="@style/AppTheme.Text.sf_20_reg"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/desktop_16"
                                    android:text="Silent Quantum"
                                    android:textColor="#66FFFFFF"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/imageSilentQuantum"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvTitleSilent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <View
                            android:id="@+id/view_space_when_slient_quantum_gone"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="0.23"
                            android:visibility="gone" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- SeekBar player -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/track_position"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="none"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textSize="14dp"
                            tools:ignore="SpUsage"
                            tools:text="00:00" />

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:progressTint="@android:color/white"
                            android:thumbTint="@android:color/white" />

                        <TextView
                            android:id="@+id/track_duration"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="none"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textSize="14dp"
                            tools:text="00:00" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>