<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#283266">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_item_dialog"
                android:layout_marginTop="@dimen/margin_item_dialog"
                android:layout_marginRight="@dimen/margin_item_dialog"
                android:layout_marginBottom="@dimen/margin_item_dialog"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/image_size_54"
                    android:layout_height="@dimen/image_size_54"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/launcher"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/mViewSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_item_dialog"
                    android:layout_marginTop="@dimen/indent_80"
                    android:layout_marginRight="@dimen/margin_item_dialog"
                    android:orientation="vertical">

                    <com.Meditation.Sounds.frequencies.views.CustomEditText
                        android:id="@+id/mEdEmailSignIn"
                        android:layout_width="@dimen/minwidth_dialog"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="@string/tv_email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_normal"
                        app:iconLeft="@drawable/ic_email" />

                    <com.Meditation.Sounds.frequencies.views.CustomEditText
                        android:id="@+id/mEdPasswordSignIn"
                        android:layout_width="@dimen/minwidth_dialog"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/indent_16"
                        android:hint="@string/tv_password"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_normal"
                        app:iconLeft="@drawable/ic_password"
                        app:iconRight="@drawable/ic_show_password"/>

                    <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                        android:id="@+id/mTvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="@dimen/padding_left_right_item_title"
                        android:text="@string/tv_forgotten_password"
                        android:textColor="@color/text_title_profile"
                        android:textSize="@dimen/text_size_small_11" />

                    <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                        android:id="@+id/mBtnSignIn"
                        android:layout_width="@dimen/minwidth_dialog"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/indent_16"
                        android:background="@drawable/bg_button_blue"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_top_icon"
                        android:paddingBottom="@dimen/padding_top_icon"
                        android:text="@string/tv_sign_in"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small_11" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_item_5"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_left_right_item_title">

                        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/tv_signUp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small_11" />

                        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                            android:id="@+id/mTvSignUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/indent_6"
                            android:fontFamily="@font/poppins_bold"
                            android:text="@string/tv_link_sign_up"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/text_size_small_11" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:popupBackground="@color/color_main_activity_background"
                        tools:listitem="@layout/item_language_spinner" />

                    <RelativeLayout
                        android:id="@+id/rlgoogle_signin"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/height_button_half"
                        android:background="@drawable/bg_login_button"
                        android:visibility="gone">

                        <RelativeLayout
                            android:id="@+id/rlgoogle"
                            android:layout_width="@dimen/indent_48"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_white_login">

                            <ImageView
                                android:layout_width="@dimen/indent_32"
                                android:layout_height="@dimen/indent_32"
                                android:layout_centerInParent="true"
                                android:src="@drawable/google_button" />
                        </RelativeLayout>

                        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/rlgoogle"
                            android:paddingLeft="@dimen/padding_left_right_item"
                            android:text="@string/tv_google"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_large_14"
                            font:fontText="fonts/MyriadPro_Semibold.otf" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/btn_guest"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/height_button_half"
                        android:background="@drawable/bg_login_button"
                        android:visibility="gone">

                        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/padding_left_right_item"
                            android:text="@string/tv_guest"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_large_14"
                            font:fontText="fonts/MyriadPro_Semibold.otf" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
