<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/viewLeftChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#EFEFEF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.Meditation.Sounds.frequencies.views.TextViewTypeWriter
                android:id="@+id/tvLeftChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:padding="10dp"
                android:textColor="#0E1A40"
                android:textColorLink="#3F51B5"
                android:textSize="@dimen/text_size_large_14" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imvTyping"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:visibility="gone"
                android:layout_gravity="center"/>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/viewRightChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#0E74CC"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <com.Meditation.Sounds.frequencies.views.TextViewTypeWriter
            android:id="@+id/tvRightChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:autoLink="web"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textColorLink="#3F51B5"
            android:textSize="@dimen/text_size_large_14" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>