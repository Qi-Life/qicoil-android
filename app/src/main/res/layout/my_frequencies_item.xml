<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_bg_item_my_frequencies" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/indent_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_album_placeholder"
            app:siBorderColor="@color/transparent"
            app:siBorderWidth="0dp"
            app:siRadius="0dp"
            app:siSquare="true" />

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/image_lock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_album_lock_2"
            android:visibility="visible"
            app:siBorderColor="@color/transparent"
            app:siBorderWidth="0dp"
            app:siRadius="@dimen/corner_radius_album"
            app:siSquare="true" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
