<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="156dp"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/bg_item"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/view_album_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_album_placeholder"
                app:siBorderColor="@color/transparent"
                app:siBorderWidth="0dp"
                app:siRadius="0dp"
                app:siSquare="true" />

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/image_lock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_album_lock_2"
                android:visibility="visible"
                app:siBorderColor="@color/transparent"
                app:siBorderWidth="0dp"
                app:siRadius="@dimen/corner_radius_album"
                app:siSquare="true" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvTitle"
            style="@style/AppTheme.Text.sf_20_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calm"
            android:layout_marginHorizontal="@dimen/desktop_16"
            android:layout_marginTop="@dimen/desktop_24"
            app:layout_constraintTop_toBottomOf="@id/view_album_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/tvName"
            style="@style/AppTheme.Text.sf_20_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="@dimen/desktop_16"
            android:textColor="#A6FFFFFF"
            android:layout_marginBottom="@dimen/desktop_16"
            android:layout_marginTop="@dimen/desktop_4"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
