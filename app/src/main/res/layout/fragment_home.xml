    <com.Meditation.Sounds.frequencies.views.CustomFontTextView
        android:id="@+id/tvNoDataRecent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_empty_list"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small_9"
        app:fontText="fonts/HelveticaNeue_Italic.ttf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indent_30"
        app:layout_constraintTop_toBottomOf="@+id/scrollbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home_list_my_frequencies"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lineCenter">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcMyFrequencies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="@dimen/indent_35"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/loadingFrame"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/lineCenter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tvMyFrequencies"
            app:layout_constraintTop_toTopOf="@+id/tvMyFrequencies" />

        <View
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginStart="-50dp"
            android:layout_marginEnd="-50dp"
            android:background="@drawable/bg_home_line_my_frequencies"
            app:layout_constraintBottom_toBottomOf="@+id/tvMyFrequencies"
            app:layout_constraintEnd_toEndOf="@+id/tvMyFrequencies"
            app:layout_constraintStart_toStartOf="@+id/tvMyFrequencies"
            app:layout_constraintTop_toTopOf="@+id/tvMyFrequencies" />

        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
            android:id="@+id/tvMyFrequencies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home_my_frequencies_border"
            android:paddingHorizontal="@dimen/indent_32"
            android:paddingVertical="@dimen/indent_16"
            android:text="@string/my_frequencies"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_small"
            app:fontText="fonts/OpenSans_Bold.ttf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>