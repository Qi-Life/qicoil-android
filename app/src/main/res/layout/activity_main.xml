<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_activity_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/bg_app_forground"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_app_phone_v2"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_main_activity_navigation"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_top_icon"
            android:paddingBottom="@dimen/padding_top_icon">

            <LinearLayout
                android:id="@+id/viewGroupAlbums"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/image_size_10"
                android:layout_marginLeft="@dimen/image_size_10"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/height_small_icon"
                    android:layout_height="@dimen/height_small_icon"
                    android:contentDescription="@string/navigation_lbl_albums"
                    android:padding="5dp"
                    android:src="@drawable/bg_album_v2" />

                <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/navigation_lbl_albums"
                    android:textColor="@color/text_title_color"
                    android:textSize="@dimen/text_size_large"
                    app:fontText="fonts/HelveticaNeue_Thin.otf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewGroupPlaylists"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/height_small_icon"
                    android:layout_height="@dimen/height_small_icon"
                    android:contentDescription="@string/navigation_lbl_programs"
                    android:padding="5dp"
                    android:src="@drawable/bg_playlists_v2" />

                <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/navigation_lbl_programs"
                    android:textColor="@color/text_title_color"
                    android:textSize="@dimen/text_size_large"
                    app:fontText="fonts/HelveticaNeue_Thin.otf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewGroupVideos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/height_small_icon"
                    android:layout_height="@dimen/height_small_icon"
                    android:contentDescription="@string/navigation_lbl_videos"
                    android:padding="5dp"
                    android:src="@drawable/bg_videos_v2" />

                <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/navigation_lbl_videos"
                    android:textColor="@color/text_title_color"
                    android:textSize="@dimen/text_size_large"
                    app:fontText="fonts/HelveticaNeue_Thin.otf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewGroupProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/height_small_icon"
                    android:layout_height="@dimen/height_small_icon"
                    android:contentDescription="@string/navigation_lbl_videos"
                    android:padding="5dp"
                    android:src="@drawable/bg_profile" />

                <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/text_title_color"
                    android:textSize="@dimen/text_size_large"
                    app:fontText="fonts/HelveticaNeue_Thin.otf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewGroupOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/height_small_icon"
                    android:layout_height="@dimen/height_small_icon"
                    android:contentDescription="@string/navigation_lbl_videos"
                    android:padding="5dp"
                    android:src="@drawable/bg_options_v2" />

                <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/navigation_lbl_options"
                    android:textColor="@color/text_title_color"
                    android:textSize="@dimen/text_size_large"
                    app:fontText="fonts/HelveticaNeue_Thin.otf" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="@dimen/height_seekbar_2"
            android:paddingBottom="@dimen/height_seekbar_2">

            <LinearLayout
                android:id="@+id/viewTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_button"
                android:background="#1C1E31"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgAlbum"
                        android:layout_width="@dimen/height_button"
                        android:layout_height="@dimen/height_button"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_album_default_small" />

                    <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                        android:id="@+id/item_track_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:clickable="false"
                        android:ellipsize="marquee"
                        android:focusable="false"
                        android:singleLine="true"
                        android:textColor="#FFF"
                        android:textSize="@dimen/text_size_large_14"
                        app:fontText="fonts/HelveticaNeue_Regular.ttf" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#202F4E"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/viewController"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_item_5"
                    android:paddingRight="@dimen/margin_item_5"
                    android:visibility="visible">

                    <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                        android:id="@+id/tvCurrentDurationMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:gravity="end"
                        android:minWidth="25dp"
                        android:text="00:00"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_size_small"
                        app:fontText="fonts/BebasNeue_Book.otf" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.Meditation.Sounds.frequencies.views.CustomSeekBar
                                android:id="@+id/sbDurationMain"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_weight="1"
                                app:csb_progress="0"
                                app:csb_progress_background_height="2dp"
                                app:csb_progress_color="#fff"
                                app:csb_progress_height="3dp"
                                app:csb_thumb_size="@dimen/image_size_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/btnReplay"
                                    android:layout_width="@dimen/height_medium_icon"
                                    android:layout_height="@dimen/height_medium_icon"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:contentDescription="@null"
                                    android:src="@drawable/ic_replay" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.5"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/btnPrevious"
                                        android:layout_width="@dimen/height_small_icon"
                                        android:layout_height="@dimen/height_small_icon"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_prev_song" />

                                    <ImageView
                                        android:id="@+id/btnPlay"
                                        android:layout_width="@dimen/height_top_icon"
                                        android:layout_height="@dimen/height_top_icon"
                                        android:layout_marginLeft="@dimen/margin_button_control"
                                        android:layout_marginRight="@dimen/margin_button_control"
                                        android:src="@drawable/bg_btn_play_pause" />

                                    <ImageView
                                        android:id="@+id/btnNext"
                                        android:layout_width="@dimen/height_small_icon"
                                        android:layout_height="@dimen/height_small_icon"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_next_song" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/btnShuffle"
                                    android:layout_width="@dimen/height_medium_icon"
                                    android:layout_height="@dimen/height_medium_icon"
                                    android:layout_marginRight="20dp"
                                    android:src="@drawable/bg_btn_shuffle" />

                                <ImageView
                                    android:id="@+id/btnProfile"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/height_medium_icon"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_profile"
                                    android:visibility="gone" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                        android:id="@+id/tvDurationMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="left"
                        android:minWidth="25dp"
                        android:text="00:00"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_size_small"
                        app:fontText="fonts/BebasNeue_Book.otf" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/viewCountdown"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="right|center"
        android:layout_marginBottom="@dimen/height_small_icon"
        android:visibility="visible">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_time_flash_sale_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mTvDurationCountDown"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical|center"
            android:orientation="horizontal">

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/mTvTimeCountDownHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center|bottom"
                android:background="@drawable/ic_time_flash_sale_rec"
                android:padding="2dp"
                android:text="10"
                android:textColor="#000"
                android:textSize="11sp"
                app:fontText="fonts/MyriadPro_Bold.otf" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/mTvTimeCountDownMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center|bottom"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/ic_time_flash_sale_rec"
                android:padding="2dp"
                android:text="10"
                android:textColor="#000"
                android:textSize="11sp"
                app:fontText="fonts/MyriadPro_Bold.otf" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/mTvTimeCountDownSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center|bottom"
                android:background="@drawable/ic_time_flash_sale_rec"
                android:padding="2dp"
                android:text="10"
                android:textColor="#000"
                android:textSize="11sp"
                app:fontText="fonts/MyriadPro_Bold.otf" />
        </LinearLayout>

        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
            android:id="@+id/mTvDurationCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="1dp"
            android:background="@drawable/ic_time_flash_sale_bg_black"
            android:padding="2dp"
            android:text="Flash Sale"
            android:textColor="#fff"
            android:textSize="12sp"
            app:fontText="fonts/MyriadPro_Bold.otf" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-5dp"
            android:layout_marginBottom="7dp"
            android:layout_toLeftOf="@+id/mTvDurationCountDown"
            android:src="@drawable/ic_time_flash_sale_on" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewGroupDownload"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="left|center"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="@dimen/height_small_icon"
        android:background="@drawable/sh_download"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imvDownload"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_download" />

        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
            android:id="@+id/mTvDownloadPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imvDownload"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="0/0"
            android:textColor="#F7D04F"
            android:textSize="12sp"
            app:fontText="fonts/MyriadPro_Bold.otf" />
    </RelativeLayout>
</FrameLayout>
