<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/indent_8"
    android:background="@drawable/rounded_dark_blue_background"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_bottom_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
            android:id="@+id/options_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/indent_8"
            android:layout_marginTop="@dimen/indent_16"
            android:layout_marginRight="@dimen/indent_8"
            android:layout_marginBottom="@dimen/indent_24"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large_17"
            font:fontText="fonts/MyriadPro_Semibold.otf"
            tools:text="Marvin Dela Cruz" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnAdvancedMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bgAdvancedMode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_advance_mode"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/tvAdvancedModeTitle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="18dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/advanced_mode_off"
                android:textAllCaps="true"
                android:textColor="@color/text_press"
                android:textSize="16sp"
                app:fontText="fonts/OpenSans_Bold.ttf"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/bgAdvancedMode"
                app:layout_constraintStart_toStartOf="@+id/bgAdvancedMode"
                app:layout_constraintTop_toTopOf="@+id/bgAdvancedMode" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/options_flash_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/indent_8"
            android:layout_marginTop="@dimen/indent_48"
            android:layout_marginRight="@dimen/indent_8"
            android:background="@drawable/bg_time_flash_sale"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_left_right_item"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/padding_left_right_item"
                android:layout_marginLeft="@dimen/padding_left_right_item"
                android:src="@drawable/ic_flash"
                tools:ignore="ContentDescription" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_item_5"
                android:layout_marginLeft="@dimen/margin_item_5"
                android:text="@string/flash_sale_50_off"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small"
                font:fontText="fonts/MyriadPro_Semibold.otf" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_item_5"
                android:layout_marginLeft="@dimen/margin_item_5"
                android:ellipsize="marquee"
                android:text="@string/tv_offer_expires_in"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small"
                font:fontText="fonts/MyriadPro_Semibold.otf" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/options_flash_sale_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_item_5"
                android:layout_marginLeft="@dimen/margin_item_5"
                android:text="@string/flash_sale_00"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small"
                font:fontText="fonts/MyriadPro_Semibold.otf" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_item_5"
                android:layout_marginLeft="@dimen/margin_item_5"
                android:text="@string/flash_sale_colon"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small"
                font:fontText="fonts/MyriadPro_Semibold.otf" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/options_flash_sale_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_item_5"
                android:layout_marginLeft="@dimen/margin_item_5"
                android:text="@string/flash_sale_00"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small"
                font:fontText="fonts/MyriadPro_Semibold.otf" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_item_5"
                android:layout_marginLeft="@dimen/margin_item_5"
                android:text="@string/flash_sale_colon"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small"
                font:fontText="fonts/MyriadPro_Semibold.otf" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/options_flash_sale_seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_item_5"
                android:layout_marginLeft="@dimen/margin_item_5"
                android:layout_marginEnd="@dimen/padding_left_right_item"
                android:layout_marginRight="@dimen/padding_left_right_item"
                android:text="@string/flash_sale_00"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small"
                font:fontText="fonts/MyriadPro_Semibold.otf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/indent_24">

                <TextView
                    android:id="@+id/options_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_16"
                    android:text="@string/profile_lbl_subscription"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/options_restore_purchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_16"
                    android:text="@string/tv_restore_purchase"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/options_instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_16"
                    android:text="@string/profile_lbl_instructions"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/options_disclaimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_16"
                    android:text="@string/profile_lbl_disclaimer"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/options_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_16"
                    android:text="@string/profile_lbl_about"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/options_change_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_16"
                    android:text="@string/tv_change_password"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chat_bot_on_off"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btnSwitchChatbot"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/bg_switch_schedule" />
                </LinearLayout>

                <TextView
                    android:id="@+id/options_faq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_16"
                    android:text="@string/tv_faq"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/options_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_16"
                    android:text="@string/tv_help_support"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/options_log_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_16"
                    android:text="@string/options_log_out"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/options_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_16"
                    android:text="@string/options_sign_in"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_marginStart="-6dp"
                    android:popupBackground="@color/dark_blue_background"
                    tools:listitem="@layout/item_language_spinner" />

            </LinearLayout>

            <TextView
                android:id="@+id/options_delete_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/indent_24"
                android:layout_marginBottom="@dimen/indent_48"
                android:gravity="right"
                android:text="@string/options_delete_user"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>