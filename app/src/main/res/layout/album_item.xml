<?xml version="1.0" encoding="utf-8"?>
<com.Meditation.Sounds.frequencies.views.CustomRecFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_album_placeholder"
        app:siBorderColor="@color/transparent"
        app:siBorderWidth="0dp"
        app:siRadius="0dp"
        app:siSquare="true" />

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/image_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_album_lock_2"
        app:siBorderColor="@color/transparent"
        app:siBorderWidth="0dp"
        app:siRadius="@dimen/corner_radius_album"
        android:visibility="visible"
        app:siSquare="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/lock"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="#7EABABAB"
        >
        <ImageView
            android:layout_width="@dimen/image_size_40"
            android:layout_height="@dimen/image_size_40"
            android:src="@drawable/share"
            android:layout_marginBottom="@dimen/image_size_14"
            app:tint="#F8F3F3" />
        <TextView
            android:id="@+id/lblunlock_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large_14"
            android:gravity="center"
            android:text="Share on Facebook \n to unlock this frequency"/>

    </LinearLayout>
</com.Meditation.Sounds.frequencies.views.CustomRecFrameLayout>
