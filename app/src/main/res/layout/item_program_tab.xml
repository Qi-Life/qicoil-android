<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/desktop_16"
    android:minHeight="@dimen/desktop_56">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/item_track_image"
        android:layout_width="@dimen/desktop_56"
        android:layout_height="@dimen/desktop_56"
        android:scaleType="fitCenter"
        android:src="@drawable/img_calm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_width="0dp"
        app:riv_corner_radius="@dimen/image_size_40"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:siRadius="4dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_track_name"
        style="@style/AppTheme.Text.sf_20_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/indent_8"
        android:paddingLeft="@dimen/indent_8"
        android:paddingEnd="@dimen/indent_8"
        android:paddingRight="@dimen/indent_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_track_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Track name" />

</androidx.constraintlayout.widget.ConstraintLayout>