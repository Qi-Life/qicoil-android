<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_main_activity_background"
    tools:context=".lemeor.ui.purchase.PurchaseActivity">

    <com.Meditation.Sounds.frequencies.views.CustomFontTextView
        android:id="@+id/subs_screen_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_buttons"
        android:layout_marginBottom="@dimen/margin_buttons"
        android:text="@string/tv_unlock_powerful_frequencies"
        android:textColor="#FFF"
        android:textSize="@dimen/text_size_18"
        app:fontText="fonts/MyriadPro_Semibold.otf"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/subs_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indent_8"
        android:contentDescription="@null"
        android:padding="@dimen/item_offset"
        android:src="@drawable/ic_dismiss"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/subs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/subs_screen_name"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/indent_16"
        android:paddingBottom="@dimen/indent_8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subs_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/img_free"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/subs_starter_buy_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subs_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/img_master"
                tools:ignore="ContentDescription" >
            </ImageView>

            <TextView
                android:id="@+id/subs_master_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                tools:text="UAH 254.99"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/subs_master_per_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subs_master_price"
                android:layout_gravity="center"
                android:text="@string/tv_per_month"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small_6"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/subs_master_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/subs_master_buy_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/subs_master_per_month"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/tv_subscription_now"
                android:textColor="@color/subs_buy_now_color"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/subs_master_per_month"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subs_abundanceI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/img_advanced"
                tools:ignore="ContentDescription" >
            </ImageView>

            <TextView
                android:id="@+id/subs_abundanceI_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                tools:text="UAH 254.99"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/subs_abundanceI_per_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subs_abundanceI_price"
                android:layout_gravity="center"
                android:text="@string/tv_per_month"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small_6"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/subs_abundanceI_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/subs_abundanceI_buy_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/subs_abundanceI_per_month"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/tv_subscription_now"
                android:textColor="@color/subs_buy_now_color"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/subs_abundanceI_per_month"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subs_abundanceII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/img_abundance"
                tools:ignore="ContentDescription" >
            </ImageView>

            <TextView
                android:id="@+id/subs_abundanceII_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                tools:text="UAH 254.99"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/subs_abundanceII_per_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subs_abundanceII_price"
                android:layout_gravity="center"
                android:text="@string/tv_per_month"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small_6"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/subs_abundanceII_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/subs_abundanceII_buy_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/subs_abundanceII_per_month"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/tv_subscription_now"
                android:textColor="@color/subs_buy_now_color2"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/subs_abundanceII_per_month"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/subs_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/subs_layout"
        app:layout_constraintBottom_toTopOf="@+id/subs_bottom_layout">
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subs_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
            android:id="@+id/subs_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_buttons"
            android:layout_marginRight="@dimen/margin_buttons"
            android:layout_marginBottom="@dimen/indent_8"
            android:paddingTop="@dimen/indent_8"
            android:gravity="center"
            android:text="@string/tv_title_subscription_lifetime"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_small_6"
            app:fontText="fonts/MyriadPro_Regular.otf"
            app:layout_constraintBottom_toTopOf="@+id/subs_continue"/>

        <Button
            android:id="@+id/subs_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:minHeight="40dp"
            android:layout_marginBottom="@dimen/indent_16"
            android:background="@drawable/bg_continue_subscription"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue_background"
            android:textSize="@dimen/text_size_large_14"
            android:textStyle="bold"
            android:text="@string/tv_continue"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>