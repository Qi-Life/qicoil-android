<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/desktop_330"
    android:layout_height="@dimen/desktop_80"
    android:layout_marginEnd="@dimen/desktop_24"
    android:layout_marginBottom="@dimen/desktop_24"
    app:cardBackgroundColor="#24000000"
    app:cardCornerRadius="@dimen/desktop_14"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="@dimen/desktop_80"
            android:layout_height="@dimen/desktop_80"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_album_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:siBorderColor="@color/transparent"
            app:siBorderWidth="0dp"
            app:siRadius="0dp"
            app:siSquare="true" />

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/image_lock"
            android:layout_width="@dimen/desktop_80"
            android:layout_height="@dimen/desktop_80"
            android:src="@drawable/ic_album_lock_2"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:siBorderColor="@color/transparent"
            app:siBorderWidth="0dp"
            app:siRadius="@dimen/corner_radius_album"
            app:siSquare="true" />

        <TextView
            android:id="@+id/title"
            style="@style/AppTheme.Text.sf_20_reg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/desktop_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Infinities Plus" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
